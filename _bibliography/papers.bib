	keywords = {Computer Science - Computers and Society, Computer Science - Social and Information Networks},
	file = {Preprint PDF:/home/ollin/snap/zotero-snap/common/Zotero/storage/HLK2YS8R/Sojo et al. - 2025 - Establishing validated standards for Home and Work location Detection.pdf:application/pdf;Snapshot:/home/ollin/snap/zotero-snap/common/Zotero/storage/BBJBJ8RG/2506.html:text/html},
