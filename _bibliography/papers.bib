	pages = {1067364},
	file = {PDF:/home/ollin/snap/zotero-snap/common/Zotero/storage/LBL2XJ54/Bucini et al. - 2023 - Connecting livestock disease dynamics to human learning and biosecurity decisions.pdf:application/pdf},
